
@{
    ViewData["Title"] = "Teams";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var members = ViewBag.members as IEnumerable<TeamMemberMaster>;
    var first = members.Where(t => t.ShowOnTopRow == true).ToList();
    var second = members.Where(t => t.ShowOnTopRow == false).ToList();
}

<section class="breadcrumb-block">
    <div class="container-fluid">
        <div class="product-banner row overflow-hidden">
            <div class="product-title col-md-5 col-12" style="">
                <div class="category-title">
                    <h1>Teams</h1>
                </div>
                <div class="category-desc">
                    <!-- <p>Turn up the heat and ignite your taste budswith the fiery kick of chilli !</p> -->
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a href="/" class="text-warning">HOME</a></li>
                        <li class="breadcrumb-item text-light">TEAMS</li>
                    </ol>
                </div>
            </div>
            <div class="product-category-banner col-md-7 col-12 px-0 position-relative">
                <span></span>
                <div class="product-category-img-banner">
                    <!-- <img src="https://koreagro.com/images/spices-banner.jpg" class="img-fluid"> -->
                </div>
            </div>
        </div>
    </div>
</section>


<section class="our-teams py-5">
    <div class="container">
        <div class="row justify-content-center mb-md-4 mb-2 row-gap-2">
            @foreach(var f in first)
            {
                <div class="col-md-4">
                    <div class="team-box bg-white position-relative overflow-hidden rounded">
                        <img src="~/images/team/@f.Photo" class="img-fluid" alt="user-img">
                        <div class="overlay-info">
                            <div class="team-name">
                                <h4 class="text-white mb-1">@f.Name</h4>
                                <h6 class="text-white-70">@f.Position</h6>
                            </div>
                            <div class="social-block pb-2">
                                <a href="tel:@f.Contact"><i class="fas fa-phone-alt" target="_blank"></i></a>
                                <a href="mailto:@f.Email" target="_blank"><i class="fas fa-envelope"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
           


        <div class="row justify-content-center  row-gap-2">
                @foreach(var s in second)
                {
                    <div class="col-md-3">
                        <div class="team-box bg-white position-relative overflow-hidden rounded">
                            <img src="~/images/team/@s.Photo" class="img-fluid" alt="user-img">
                            <div class="overlay-info">
                                <div class="team-name">
                                    <h5 class="text-white mb-1">@s.Name</h5>
                                    <h6 class="text-white-70">@s.Position</h6>
                                </div>
                                <div class="social-block pb-2">
                                    <a href="tel:@s.Contact"><i class="fas fa-phone-alt" target="_blank"></i></a>
                                    <a href="mailto:@s.Email" target="_blank"><i class="fas fa-envelope"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>

                }
        </div>

    </div>
</section>


