<!------ Product start ------>


<div class="sub_products py-5" style="-background-color:rgb(46, 125, 50,0.01);">
    <div class="container">
        <div class="product-category">
            <div class="row">
                <div class="col-md-5">
                    <div class="product-chilli mb-md-0 mb-3">
                        <img src="~/images/products/@Model.prdImage" class="img-fluid w-100" alt="">
                    </div>
                </div>
                <div class="col-md-7 ps-md-5">
                    <div>
                        <h2 class="mb-2 fw-bold" style="font-family: 'Winky Rough', sans-serif;">@Model.prdName</h2>
                    <h5 class="fw-bold product-txt mb-3">Product Details</h5>
                    <ul class="list-unstyled d-flex flex-column row-gap-2 mb-md-4 mb-3">
                        @foreach(var pd in Model.ProductDetails)
                        {
                            <li>
                                  <i class="fa-solid fa-chevron-right text-theme small"></i> <b style="font-weight:600;">@pd.Key : </b> @pd.Value
                            </li>
                        }
                       
                        
                    </ul>
                    <h5 class="fw-bold product-txt mb-3">Varities</h5>
                        <ul class="list-unstyled d-flex flex-column row-gap-2 mb-md-4 mb-3 text-black-85">
                        @foreach(var v in Model.Varieties)
                        {
                            <li>
                                    <i class="fa-solid fa-chevron-right text-theme small"></i> <b style="font-weight:600;">@v.Key : </b> @v.Value
                                    @* <i class="fa-regular fa-circle-dot text-theme"></i>  *@
                            </li>
                        }
                    </ul>
                        @Html.Raw(Model.prdUses)
                   
                    

                    <button id="inq1" class="btn btn-theme px-4 text-white rounded-pill shadow">Inquiry Now</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>

    <div style="-background-color:rgb(46, 125, 50,0.01);">
    <div class="container ">
        <div class="row">
                <div class="col-md-10 mx-auto packing-cont-data mb-5">
                    @foreach(var od in Model.OtherDetails)
                    {
                        @Html.Raw(od.Value)
                    }
                </div>
        </div>
    </div>
    </div>

<!------ Physical Spacification ------>


    

    <div class="specifications" style="-background-color:rgb(46, 125, 50,0.01);">
    <div class="container">
        <div class="row">                
            <div class="col-md-10 mx-auto mb-5">
                    <div class="card border-theme shadow-none" style="background-color: #eaf7ea;">
                    <div class="card-header py-3 border-0 bg-light">
                        <h4 class="product-txt mb-0">Specifications</h4>
                    </div>
                    <div class="table-responsive rounded-3 mb-0">
                            <table class="table mb-0" style="-background-color: #eaf7ea;">
                            <tr>
                                <th style="-background-color: #0B534508;">Parameter</th>
                                <th>Range/Specification</th>
                            </tr>
                            @foreach(var ps in Model.PhysicalSpecification)
                            {
                                <tr>
                                    <td>@ps.Key</td>
                                    <td>@ps.Value</td>
                                </tr>
                            }                                                     
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-6 d-none">
                <div class="border-0">
                    <h4 class="product-txt mb-3">Specification</h4>
                    <div>
                        @foreach (var item in Model.OtherDetails)
                        {
                            <div class="mb-3 product-dynamic-details">
                                <div>@Html.Raw(item.Value)</div> <!-- Use Html.Raw to render HTML -->
                            </div>
                        }
                    </div>
                </div>
            </div>


                <div class="col-md-10 mx-auto mb-5">
                    <div class="card border-theme shadow-none" style="background-color: #eaf7ea;">
                    <div class="card-header py-3 bg-light border-0">
                        <h4 class="product-txt mb-0">Grades</h4>
                    </div>
                    <div class="table-responsive rounded-3">
                        <table class="table mb-0 rounded-3">
                            <tr>
                                <th style="-background-color: #0B534508;">Parameter</th>
                                <th>Range/Specification</th>
                            </tr>
                            @foreach(var g in Model.Grades)
                            {
                                <tr>
                                    <td style="-background-color: #0B534508;">@g.Key</td>
                                    <td>@g.Value</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


