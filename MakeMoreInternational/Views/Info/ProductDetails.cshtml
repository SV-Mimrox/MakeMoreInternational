<div class="related-products py-5">
    <div class="container">
        <h2 class="product-txt">Related Products</h2>
        <div class="owl-carousel owl-theme mt-4" id="productList">
                @if (ViewBag.relatedProducts != null)
                {
                    foreach(var rp in ViewBag.relatedProducts as IEnumerable<ProductMaster>)
                    {
                        <div class="">
                            <div class="card border-0">
                                <img src="~/images/products/@rp.prdImage" class="rounded img-fluid" alt="">
                                <div class="card-title">
                                    @rp.prdName
                                </div>
                                <a href="/product/@rp.prdSlug" class="stretched-link"></a>
                            </div>
                        </div>
                    }
                }
               
        </div>
    </div>
</div>
