@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
        @if (ViewBag.sliders != null)
        {
            int i = 0;
            foreach (var s in ViewBag.sliders as IEnumerable<SliderMaster>)
            {
                <text>
                        new AutoTyping({
                            id: 'f-tagline-@i',
                            typeText: ['@s.Slogan'],
                            textColor: 'rgba(255, 255, 255, 0.85)',
                            typeSpeed: 80,
                            typeRandom: false,
                            typeDelay: 300,
                            cursorSpeed: 200,
                            deleteSpeed: 10,
                            cursorColor: 'orange',
                            deleteDelay: 1000,
                            typeInfinity: true
                        }).init();
                </text>
                i++;
            }
        }
                });
    </script>
}
