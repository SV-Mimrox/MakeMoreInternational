<!-- Swiper Slider -->
<div class="swiper mySwiper">
    <div class="swiper-wrapper">
        @if(ViewBag.sliders != null)
        {
            int i = 0;
            @foreach (var sld in ViewBag.sliders as IEnumerable<SliderMaster>)
            {
                <div class="swiper-slide">
                    <img src="~/uploads/slider/@sld.MainImage" alt="">
                    <div class="text-overlay">
                        <h2 class="display-5 fw-bold mb-md-4 mb-3 text-white-85" id="f-tagline-@i"></h2>
                        <!-- Crafted by <span class="text-theme2">Nature</span> Perfected by Innovation ! -->
                        <a href="#" class="btn btn-theme2 rounded-pill px-4 py-2 text-white">Explore more</a>
                        <div class="spices-img">
                            @foreach (var si in sld.SubImages)
                            {
                                if (si != null)
                                {
                                    <img src="~/uploads/slider/@si" class="animate__animated animate__bounceInUp" alt="">
                                }

                            }


                        </div>
                    </div>
                </div>
                i++;
            }
        }
        
        
       
        
    </div>
    <!-- <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-pagination"></div> -->
</div>

