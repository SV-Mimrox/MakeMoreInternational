@model List<MakeMoreInternational.Models.LanguageMaster>
@{
    ViewData["Title"] = "Language List";
    Layout = "~/Areas/ho/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap">
    <h2 class="mb-3 fw-bold">Languages</h2>

    <a asp-action="Create" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Add New Language
    </a>
</div>
<div class="container-fluid p-0">
    
    <div class="form-box">
        <table class="table align-middle mb-0">
            <thead class="table-light">
            <tr>
                <th>Language Name</th>
                <th>Code</th>
                <th>Status</th>
                <th style="width:150px;">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.lmName</td>
                    <td>@item.lmCode</td>
                    <td>
                        @if (item.lmStatus)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.lmId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.lmId" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure to delete?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>
