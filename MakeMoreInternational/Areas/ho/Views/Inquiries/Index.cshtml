@model List<MakeMoreInternational.Models.InquiryMaster>
@{
    ViewData["Title"] = "Inquiry";
    Layout = "~/Areas/ho/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap">
    <h1 class="h3 mb-3"><strong>Inquiry</strong> List</h1>

</div>
<div class="form-box">
    <table class="table align-middle">
        <thead class="table-light">
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Contact</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Page</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.inqDate.ToString("dd-MM-yyyy")</td>
                    <td>@c.inqName</td>
                    <td>@c.inqContact</td>
                    <td>@c.inqEmail</td>
                    <td>@c.inqSubject</td>
                    <td>@c.inqMessage</td>
                    <td>
                        @if (c.inqPage != "-")
                        {
                            <a href="@c.inqPage">View Page</a>
                        }
                    </td>
                    <td>

                        <a asp-area="ho" asp-controller="ContactInquiry" asp-action="Delete" asp-route-id="@c.inqId"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Delete this Inquiry?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
