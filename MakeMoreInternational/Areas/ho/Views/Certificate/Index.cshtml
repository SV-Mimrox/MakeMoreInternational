@model List<MakeMoreInternational.Models.CertificateMaster>
@{
    ViewData["Title"] = "Certificates";
    Layout = "~/Areas/ho/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap">
    <h1 class="h3 mb-3"><strong>Certificates</strong> List</h1>
    <a asp-area="ho" asp-controller="Certificate" asp-action="Create" class="btn btn-success mb-3">
        + Add Certificate
    </a>
</div>

<div class="form-box">
    <table class="table align-middle">
        <thead class="table-light">
            <tr>
                <th>Image</th>
                <th>Certificate Image</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(c.crtImage))
                        {
                            <img src="@Url.Content("~/images/certificate/" + c.crtImage)" width="60" height="60" class="img-thumbnail" />
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(c.crtCertiImage))
                        {
                            <img src="@Url.Content("~/images/certificate/" + c.crtCertiImage)" width="60" height="60" class="img-thumbnail" />
                        }
                    </td>
                    <td>@(c.crtStatus ? "Active" : "Inactive")</td>
                    <td>
                        <a asp-area="ho" asp-controller="Certificate" asp-action="Edit" asp-route-id="@c.crtId"
                           class="btn btn-sm btn-primary">Edit</a>
                        <a asp-area="ho" asp-controller="Certificate" asp-action="Delete" asp-route-id="@c.crtId"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure to delete this certificate?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
